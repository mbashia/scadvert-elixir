
<div class="bg-gray-800 pt-3 mb-[30px]">
      <div class="rounded-tl-3xl bg-gradient-to-r from-blue-900 to-gray-800 p-4 shadow text-2xl text-white">
          <h3 class="font-bold pl-2">LISTING FACILIITIES</h3>
      </div>
  </div>
  <div class = "   flex items-center ">
         <div class  = " bg-green-400 rounded-lg p-2 inline-block mx-4">  
      <span><%= link "New Facility", to: Routes.facility_path(@conn, :new) %></span>

      
      </div>
      
      <div class = "inline-block ml-[200px]">
          <%= render "search.html", Map.put(assigns, :action, Routes.facility_path(@conn, :search)) %>

        </div>

       <div class = "ml-[200px]">
       <div > 
        <%= Heroicons.icon("arrow-path", type: "solid", class: "h-4 w-6 inline-block align-middle" , style: "color:#2659bf;")%>
             <span class = "inline-block poppins-regular align-top"> <%= link "reload ", to: Routes.facility_path(@conn, :index), style: "color: #173673;" %></span>

       </div>

      
       
       </div> 

      
        </div>
        <div class = "my-8 ml-6">
        <%= for a_page <- 1..@total_pages do %>
       <%= link to: Routes.facility_path(@conn, :index, page: a_page) do %>

        <div class = "h-8 w-8 bg-blue-400 inline-block text-white py-1 pl-2 ml-2">
        <%= a_page %>

        </div>
       <% end %>

        <%end %>
        
        </div>
        
        <div class = "my-8 ml-6 text-blue poppins-regular-blue">
        <%= if @page.page_number>1 do %>

        <div class = "inline-block  hover:underline">
        <%= link "prev page", to: Routes.facility_path(@conn, :index, page: @page.page_number-1) %>
        </div>
        <%end %>
        <%= if @page.page_number< @page.total_pages do %>
        <div class = "inline-block hover:underline">
        <%= link "next page", to: Routes.facility_path(@conn, :index, page: @page.page_number+1) %>
        </div>
        <%end %>


      </div>


<div class = "overflow-x-auto">

<table  class  = "w-full sm:w-auto" style = "width:100%;">
  <thead>
    <tr>
      <th class = "for_tables">Code</th>
      <th class = "for_tables">Name</th>
      <th class = "for_tables">Description</th>
      <th class = "for_tables">Status</th>
      <th class = "for_tables">picture </th>    
       <th class = "for_tables">Actions</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for facility <- @facilitys do %>
    <tr>
      <td  class = "table_data"><%= facility.codes.name %></td>
      <td  class = "table_data"><%= facility.name %></td>
      <%= if String.length(facility.description) > 200 do%>
      <td  class = "table_data"><%=  String.slice(facility.description , 0, 200)<> "..."%></td>
      <%else %>
      <td class = "table_data"> <%=facility.description %></td>
      <%end %>      
       <td class = "table_data"> <%= if facility.status == "true" do %>
          <div class = "bg-green-400 p-1 rounded">Active</div>
      <%else %>
      <div class = "bg-red-600 p-1 rounded ">Inactive</div> 
      <%end %>     
      
      
      </td>

      
     
      <td  >
       <%= if facility.picture do %><%= img_tag Scadvert.FacilityImage.url({facility.picture, facility}, signed: true), class: "h-[42px] w-[60px]"%>
    <%else %>
      <img src={@default_image} class = "h-[42px] w-[60px] object-scale-down"  alt="image_description">
      <%end %>
      </td>
      <td class = "table_data">
            <div class = "flex flex-row   ">

         <div class = "p-2 inline-block bg-sky-500 rounded mr-2"> 
        <span><%= link "Show", to: Routes.facility_path(@conn, :show, facility) %></span>
        </div>
        <div class = "p-2 inline-block bg-sky-700 rounded mr-2">       
        <span><%= link "Edit", to: Routes.facility_path(@conn, :edit, facility) %></span>
        </div>
         <div class = "p-2 inline-block bg-red-600 rounded mr-2">       
       <span><%= link "Delete", to:  Routes.facility_path(@conn, :delete, facility), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </div>
      </div>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
</div>



